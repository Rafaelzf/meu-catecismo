
generator client {
  provider = "prisma-client-js"
  engineType = "library"
}


datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL") 
  directUrl = env("POSTGRES_URL_NON_POOLING") 
}

model Sections {
  id Int @id @default(autoincrement())
  title String  
  slug  String  
  message String
  createDate DateTime @default(now())
  updateDate DateTime @updatedAt
}

model Topics {
  id Int @id @default(autoincrement())
  parent_slug String  
  content  ContentTopics[]  
  createDate DateTime @default(now())
  updateDate DateTime @updatedAt
}

model ContentTopics {
  id Int @id @default(autoincrement())
  title String
  page String
  topics Topics[]
  createDate DateTime @default(now())
  updateDate DateTime @updatedAt
}

model QuestionsAsks {
  id Int @id @default(autoincrement())
  page String
  content ContentQuestionsAsks[]
}

model ContentQuestionsAsks {
  id Int @id @default(autoincrement())
  pergunta String
  resposta Asks[]
  questionsAsks QuestionsAsks[]
}

model Asks {
  id Int @id @default(autoincrement())
  pergunta String
  resposta ContentAsks[]
  contentQuestionsAsks ContentQuestionsAsks[]
}

model ContentAsks {
  id Int @id @default(autoincrement())
  text String
  asks Asks[]
}




